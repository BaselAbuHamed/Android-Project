<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/imageCard"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="9.10dp"
        android:elevation="12dp"
        app:cardBackgroundColor="#D6E8EE"
        app:cardCornerRadius="40dp"
        app:layout_constraintVertical_bias="0.226">

        <ImageView
            android:id="@+id/senderImage"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/photocamera" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/messageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="6.50dp"
        android:layout_marginTop="6.50dp"
        android:layout_marginEnd="1.3dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="6.50dp"
        android:layout_toLeftOf="@id/imageCard"
        android:background="#90ee90"
        android:fontFamily="sans-serif-black"
        android:padding="9.10dp"
        android:text="Chattinnng"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/senderName"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="-15dp"
        android:layout_marginBottom="-5dp"
        android:layout_toLeftOf="@id/imageCard"
        android:fontFamily="sans-serif"
        android:paddingStart="3dp"
        android:text="userName"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/editTextTime"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageCard"
        android:layout_alignParentRight="true"
        android:layout_marginTop="3dp"
        android:ems="2"
        android:fontFamily="casual"
        android:text="29-6-2023 12:5"
        android:textSize="11dp" />

</RelativeLayout>
